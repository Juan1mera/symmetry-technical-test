rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función para validar que el articulo cumple el esquema diseñado
    function isValidArticle() {
      let data = request.resource.data;
      return 
        // 1. Campos obligatorios y tipos
        data.title is string && data.title.size() > 0 &&
        data.content is string && data.content.size() > 0 &&
        data.category is string &&
        data.thumbnailURL is string &&
        
        // 3. Integridad de datos (Metadata)
        data.authorId == request.auth.uid && // El autor debe ser el usuario logueado
        data.createdAt is timestamp;
    }

    match /articles/{articleId} {
      // Cualquiera puede leer noticias
      allow read: if true;
      
      // Solo usuarios autenticados pueden crear, y SOLO si cumplen el esquema
      allow create: if request.auth != null && isValidArticle();
      
      // Solo el dueño del artículo puede editarlo o borrarlo
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
  }
}