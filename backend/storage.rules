rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Rule for the specific folder required by the assignment
    match /media/articles/{imageId} {
      // Anyone can view the image
      allow read: if true;
      // Only logged-in users can upload, and it must be an image
      allow write: if request.resource.contentType.matches('image/.*');
    }

    // User profile images
    match /user_profiles/{userId}/{imageFile} {
      // Anyone can read profile images
      allow read: if true;
      
      // Only authenticated users can upload to their own profile folder
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.contentType.matches('image/.*')
                   && request.resource.size < 5 * 1024 * 1024; // Max 5MB
    }
  }
}